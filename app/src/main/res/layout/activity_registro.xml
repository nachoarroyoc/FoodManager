<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registroActivity"
    android:background="@drawable/wallpaper">

    <FrameLayout
        android:layout_width="349dp"
        android:layout_height="600dp"
        android:background="#C6FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.597">

        <EditText
            android:id="@+id/editTextEmailAddress"
            android:layout_width="265dp"
            android:layout_height="49dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:background="#00FFFFFF"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:textColor="#9F03DAC5"
            android:textColorHint="#9F03DAC5" />

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="95dp"
            android:background="#9F03DAC5"
            android:orientation="horizontal"></LinearLayout>

        <EditText
            android:id="@+id/editTextidentificador"
            android:layout_width="265dp"
            android:layout_height="49dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="130dp"
            android:background="#00FFFFFF"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="identificador"
            android:textColor="#9F03DAC5"
            android:textColorHint="#9F03DAC5" />

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="175dp"
            android:background="#9F03DAC5"
            android:orientation="horizontal"></LinearLayout>

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="265dp"
            android:layout_height="49dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="210dp"
            android:background="#00FFFFFF"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="nombre"
            android:textColor="#9F03DAC5"
            android:textColorHint="#9F03DAC5" />

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="255dp"
            android:background="#9F03DAC5"
            android:orientation="horizontal"></LinearLayout>

        <EditText
            android:id="@+id/editTextApellidos"
            android:layout_width="265dp"
            android:layout_height="49dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="290dp"
            android:background="#00FFFFFF"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="apellidos"
            android:textColor="#9F03DAC5"
            android:textColorHint="#9F03DAC5" />

        <LinearLayout
            android:layout_width="265dp"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="335dp"
            android:background="#9F03DAC5"
            android:orientation="horizontal"></LinearLayout>

        <EditText
            android:id="@+id/editTextPass"
            android:layout_width="265dp"
            android:layout_height="49dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="370dp"
            android:background="#00FFFFFF"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="constraseÃ±a"
            android:inputType="textPassword"
            android:textColor="#9F03DAC5"
            android:textColorHint="#9F03DAC5" />

        <LinearLayout
            android:id="@+id/botonRegistro"
            android:layout_width="265dp"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="415dp"
            android:background="#9F03DAC5"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="265dp"
            android:layout_height="44dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="480dp"
            android:background="#A9FFFFFF"
            android:gravity="center"
            android:onClick="checkIfUserExist"
            android:text="REGISTRAR"
            android:textColor="#9F03DAC5"
            android:textSize="15sp"
            android:textStyle="bold" />


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>