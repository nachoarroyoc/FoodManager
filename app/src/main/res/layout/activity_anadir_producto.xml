            android:background="#00FFFFFF"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:hint="azÃºcar"
            android:textColor="#9F03DAC5"
            android:textColorHint="#9F03DAC5" />

        <LinearLayout
